            <script>
            $('#myTab a').click(function (e) {
                e.preventDefault();
                $(this).tab('show');
                })

                // Gestion des cookies
                function setCookie(name, value, days) {
                    const date = new Date();
                    date.setTime(date.getTime() + (days * 24 * 60 * 60 * 1000));
                    const expires = "expires=" + date.toUTCString();
                    document.cookie = name + "=" + value + ";" + expires + ";path=/";
                }

                // Écouteurs d'événements pour les boutons
                document.getElementById("accept-cookie").addEventListener("click", function() {
                    setCookie("accept_cookies", "true", 365);
                    document.querySelector(".cookie-banner").style.display = "none";
                });

                document.getElementById("refuse-cookie").addEventListener("click", function() {
                    setCookie("accept_cookies", "false", 365);
                    document.querySelector(".cookie-banner").style.display = "none";
                });

                // Vérification si l'utilisateur a déjà fait un choix
                const hasAcceptedCookies = document.cookie.includes("accept_cookies=true");
                const hasRefusedCookies = document.cookie.includes("accept_cookies=false");

                if (hasAcceptedCookies) {
                    document.querySelector(".cookie-banner").style.display = "none";
                } else if (hasRefusedCookies) {
